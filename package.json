{
	"name": "connect-valkey",
	"description": "Valkey session store for connect-compatible servers (@fastify/session, express, connect, etc.)",
	"version": "0.0.0-development",
	"type": "module",
	"exports": "./build/index.js",
	"types": "./build/index.d.ts",
	"license": "MIT",
	"engines": {
		"node": "^24.3.0",
		"npm": "^11.4.2"
	},
	"volta": {
		"node": "24.3.0",
		"npm": "11.4.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "rimraf build && tsgo --project tsconfig.build.json",
		"clean": "rimraf build coverage",
		"type:check": "tsgo --project tsconfig.json",
		"lint": "biome check . --write --unsafe",
		"lint:check": "biome ci .",
		"test": "node ./scripts/test.ts test",
		"test:watch": "node ./scripts/test.ts test:watch",
		"test:coverage": "node ./scripts/test.ts test:coverage",
		"spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,src/**/*.ts}\"",
		"cz": "cz",
		"semantic-release": "semantic-release"
	},
	"peerDependencies": {
		"@valkey/valkey-glide": "^2.0.1",
		"express-session": "^1.18.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@ryansonshine/commitizen": "^4.2.8",
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/github": "^11.0.3",
		"@semantic-release/npm": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@types/express-session": "^1.18.2",
		"@types/node": "^24.0.11",
		"@types/prompts": "^2.4.9",
		"@typescript/native-preview": "^7.0.0-dev.20250708.1",
		"@valkey/valkey-glide": "^2.0.1",
		"c8": "^10.1.3",
		"cspell": "^9.1.3",
		"esbuild": "^0.25.6",
		"express-session": "^1.18.1",
		"is-main": "^0.4.0",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.6"
	}
}
